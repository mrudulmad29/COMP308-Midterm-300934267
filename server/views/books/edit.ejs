<% include ../partials/header.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">

                <div class="form-group">
                    <label for="NameTextField">Title</label>
                    <input type="text" placeholder="Book Name"
                    class="form-control" id="NameTextField" 
                    name="title" value="<%= books.Title %>" required>
                </div>

                <div class="form-group">
                        <label for="PriceTextField">Price</label>
                        <input type="text" placeholder="Enter Price"
                        class="form-control" id="PriceTextField" 
                        name="price"   value="<%= books.Price %>" required>
                </div>
                <div class="form-group">
                        <label for="AuthorTextField">Author</label>
                        <input type="text" placeholder="Enter Author"
                        class="form-control" id="AuthorTextField" 
                        name="author" value="<%= books.Author %>"  required>
                </div>
                <div class="form-group">
                        <label for="GenreTextField">Genre</label>
                        <input type="text" placeholder="Enter Genre"
                        class="form-control" id="GenreTextField" 
                        name="genre" value="<%= books.Genre %>"   required>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check-square-o"></i> Submit</button>
            </form>


        </div>
    </div>
</div>









<% include ../partials/footer.ejs %>